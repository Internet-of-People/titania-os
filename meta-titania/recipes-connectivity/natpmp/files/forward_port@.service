[Unit]
Description=Port forwarding for %i/TCP
Requires=NetworkManager-wait-online.service
After=NetworkManager-wait-online.service

[Service]
Restart=on-failure
RemainAfterExit=true
# That's a year (3600*24*365)
ExecStart=/usr/bin/natpmpc -a %i %i tcp 31536000
ExecStop=/usr/bin/natpmpc -a %i %i tcp 0

