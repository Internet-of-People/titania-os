# Standard OpenEmbedded fstab
/dev/root            /                    auto       defaults              1  1
proc                 /proc                proc       defaults              0  0
devpts               /dev/pts             devpts     mode=0620,gid=5       0  0
tmpfs                /run                 tmpfs      mode=0755,nodev,nosuid,strictatime 0  0
tmpfs                /var/volatile        tmpfs      defaults              0  0

# == Titania starts here ==

# Runtime dapp nginx drop-ins
tmpfs                /run/dapp.conf.d                 tmpfs      mode=0755,nodev,nosuid,strictatime 0  0

# Bind mounts
/datafs/titania/docker              /var/lib/docker    auto       bind      0  0
/datafs/titania/home                /home              auto       bind      0  0
/datafs/titania/config/etc/rw       /etc/rw            auto       bind,x-systemd.requires=datafs.mount,x-systemd.requires=mirror@etc-rw.service 0 0
